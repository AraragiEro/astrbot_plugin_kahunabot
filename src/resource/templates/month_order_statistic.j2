<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>价格信息</title>
    <script src="https://cdn.jsdmirror.com/npm/@tailwindcss/browser@4"></script>
    <script src="https://cdn.jsdmirror.com/npm/chart.js"></script>
    <script src="https://cdn.jsdmirror.com/npm/chartjs-adapter-date-fns"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://unpkg.com/d3-sankey@0.12.3/dist/d3-sankey.min.js"></script>
</head>
<body class="bg-gray-100 p-0 m-0">
    <div class="container w-[calc(100%-20px)] max-w-[1920px] mx-auto px-2 py-8">
        <!-- 标题区域 -->
        <div class="relative h-[250px] mb-8 rounded-lg overflow-hidden">
            <!-- 背景图片 -->
            <img src="data:image/png;base64,{{ header_image }}" alt="背景" class="absolute inset-0 w-full h-full object-cover">
            <!-- 标题内容 -->
            <div class="absolute inset-0 flex justify-between items-center px-8">
                <h1 class="text-3xl font-bold text-white shadow-text"> {{ header_title }} </h1>
            </div>
        </div>
        <!-- 顶部总览卡片 -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-4">月度销售数据分析</h1>
            <div class="flex items-center justify-between">
                <div class="text-center">
                    <p class="text-gray-600 text-lg">总销售额</p>
                    <p class="text-4xl font-bold text-blue-600">{{ "%.2f"|format(data.sell_total/100000000) }}亿 ISK</p>
                </div>
                <div class="text-center">
                    <p class="text-gray-600 text-lg">销售商品种类</p>
                    <p class="text-4xl font-bold text-green-600">{{ data.sell_type_data|length }}</p>
                </div>
                <div class="text-center">
                    <p class="text-gray-600 text-lg">销售地点数量</p>
                    <p class="text-4xl font-bold text-purple-600">{{ data.sell_structure_data|length }}</p>
                </div>
            </div>
        </div>

        <!-- 图表区域 -->
        <div id="main-flex" class="flex flex-col lg:flex-row gap-8">
            <div id="left-col" class="flex-1 min-w-0">
                <div class="hot-table">
                    <!-- 热销商品排行表格 -->
                    <h2 class="text-xl font-bold text-gray-800 mb-4">热销商品排行</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead>
                                <tr class="bg-gray-50">
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">图标</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">商品名称</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">销量</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">销售额</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">市场占比</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for item in data.sell_type_data.values()|sort(attribute='sell_profit', reverse=true) %}
                                <tr>
                                    <td class="px-4 py-2 whitespace-nowrap">
                                        {% if item.icon %}
                                        <img src="data:image/png;base64,{{ item.icon }}" 
                                             alt="{{ item.name }}" 
                                             class="w-12 h-12 object-contain rounded-tr-lg rounded-br-lg rounded-bl-lg"
                                             style="border: 1px solid #e5e7eb;">
                                        {% else %}
                                        <div class="w-12 h-12 bg-gray-100 rounded-tr-lg rounded-br-lg rounded-bl-lg flex items-center justify-center">
                                            <span class="text-gray-400 text-xs">无图</span>
                                        </div>
                                        {% endif %}
                                    </td>
                                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-gray-900">{{ item.name }}</td>
                                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-gray-500">{{ item.sell_volume }}</td>
                                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-gray-500">
                                        <span class="isk-amount" data-amount="{{ item.sell_profit }}"></span>
                                    </td>
                                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-gray-500">
                                        {% if item.market_total_month_flow %}
                                        <div class="w-24 bg-gray-200 rounded-full h-2.5 inline-block align-middle mr-2">
                                            <div class="bg-blue-500 h-2.5 rounded-full" style="width: {{ (item.sell_profit / item.market_total_month_flow * 100) | round(1) }}%"></div>
                                        </div>
                                        <span class="text-xs text-gray-600 align-middle">{{ (item.sell_profit / item.market_total_month_flow * 100) | round(2) }}%</span>
                                        {% else %}
                                        <span class="text-xs text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="chart1">
                    <!-- 商品类型销售占比 -->
                    <div class="bg-white rounded-lg shadow-lg p-6 mt-8">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">商品类型销售占比</h2>
                        <canvas id="groupChart" height="420"></canvas>
                    </div>
                </div>
            </div>
            <div id="right-col" class="flex flex-col gap-8 flex-1 min-w-0">
                <div id="chart2">
                    <!-- 销售地点分布 -->
                    <div class="bg-white rounded-lg shadow-lg p-6">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">销售地点分布</h2>
                        <canvas id="structureChart" height="300"></canvas>
                    </div>
                </div>
                <div id="chart3">
                    <!-- 商品类型销售趋势 -->
                    <div class="bg-white rounded-lg shadow-lg p-6">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">商品类型销售趋势</h2>
                        <canvas id="trendChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 移动到最外层的页脚 -->
    <div class="text-center text-gray-500 text-sm mt-4">
        <p>紫竹梅实验型工业核心mk.1 - 月度绩效分析系统 - kahunaBot</p>
    </div>

    <script>
        // 格式化ISK的函数
        function formatISK(num) {
            if (num >= 1e15) {
                return (num / 1e15).toFixed(2) + ' Q';
            } else if (num >= 1e12) {
                return (num / 1e12).toFixed(2) + ' T';
            } else if (num >= 1e9) {
                return (num / 1e9).toFixed(2) + ' B';
            } else if (num >= 1e6) {
                return (num / 1e6).toFixed(2) + ' M';
            } else if (num >= 1e3) {
                return (num / 1e3).toFixed(2) + ' K';
            }
            return num.toFixed(2);
        }

        // 商品类型销售占比图表
        const groupCtx = document.getElementById('groupChart').getContext('2d');
        new Chart(groupCtx, {
            type: 'bar',
            data: {
                labels: {{ data.sell_group_data.keys()|list|tojson }},
                datasets: [{
                    label: '销售额',
                    data: {{ data.sell_group_data.values()|list|tojson }},
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                        '#FF9F40', '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                        '#9966FF', '#FF9F40', '#FF6384', '#36A2EB', '#FFCE56',
                        '#4BC0C0', '#9966FF'
                    ]
                }]
            },
            options: {
                indexAxis: 'y', // 横向条形图
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.raw;
                                return `销售额: ${formatISK(value)} ISK`;
                            }
                        }
                    },
                    title: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return formatISK(value);
                            }
                        }
                    }
                }
            }
        });

        // 销售地点分布图表
        const structureCtx = document.getElementById('structureChart').getContext('2d');
        new Chart(structureCtx, {
            type: 'bar',
            data: {
                labels: {{ data.sell_structure_data.keys()|list|tojson }},
                datasets: [{
                    label: '销售额',
                    data: {{ data.sell_structure_data.values()|list|tojson }},
                    backgroundColor: '#36A2EB'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.raw;
                                return `销售额: ${formatISK(value)} ISK`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return formatISK(value);
                            }
                        }
                    }
                }
            }
        });

        // 商品类型销售趋势图表
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: {{ data.sell_group_data.keys()|list|tojson }},
                datasets: [{
                    label: '销售额',
                    data: {{ data.sell_group_data.values()|list|tojson }},
                    borderColor: '#4BC0C0',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.raw;
                                return `销售额: ${formatISK(value)} ISK`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return formatISK(value);
                            }
                        }
                    }
                }
            }
        });

        // 更新所有金额显示
        document.addEventListener('DOMContentLoaded', function() {
            // 更新总销售额显示
            const totalElement = document.querySelector('.text-4xl.font-bold.text-blue-600');
            if (totalElement) {
                const totalValue = {{ data.sell_total }};
                totalElement.textContent = formatISK(totalValue) + ' ISK';
            }

            // 更新表格中的金额显示
            document.querySelectorAll('.isk-amount').forEach(element => {
                const amount = parseFloat(element.dataset.amount);
                element.textContent = formatISK(amount) + ' ISK';
            });

            // 动态布局调整
            const tableRows = document.querySelectorAll('#left-col table tbody tr');
            const chart1 = document.getElementById('chart1');
            const chart2 = document.getElementById('chart2');
            const chart3 = document.getElementById('chart3');
            const leftCol = document.getElementById('left-col');
            const rightCol = document.getElementById('right-col');
            const LONG_LIST_THRESHOLD = 14;

            // 先清空左右两栏的图表容器
            leftCol.appendChild(document.querySelector('.hot-table'));
            leftCol.appendChild(chart1);
            rightCol.appendChild(chart2);
            rightCol.appendChild(chart3);

            if (tableRows.length > LONG_LIST_THRESHOLD) {
                // 列表很长，左侧只放表格，右侧放三个图表
                if (leftCol.contains(chart1)) leftCol.removeChild(chart1);
                rightCol.insertBefore(chart1, rightCol.firstChild);
            } else {
                // 列表较短，左侧放表格+一个图表，右侧放两个图表
                if (!leftCol.contains(chart1)) leftCol.appendChild(chart1);
                if (rightCol.contains(chart1)) rightCol.removeChild(chart1);
            }
        });
    </script>
</body>
</body>