<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>价格信息</title>
    <script src="https://cdn.jsdmirror.com/npm/@tailwindcss/browser@4"></script>
    <script src="https://cdn.jsdmirror.com/npm/chart.js"></script>
    <script src="https://cdn.jsdmirror.com/npm/chartjs-adapter-date-fns"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://unpkg.com/d3-sankey@0.12.3/dist/d3-sankey.min.js"></script>
    <style type="text/tailwindcss">
        @layer utilities {
            .content-auto {
                content-visibility: auto;
            }
        }
    </style>
</head>
<body class="bg-gray-100 p-4">
    <!-- 修改容器最大宽度为 lg -->
    <div class="container mx-auto max-w-lg">
        <!-- 物品信息卡片 -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <div class="flex items-center justify-between mb-4">
                <div class="flex-1 mr-4">
                    <h2 class="text-2xl font-bold text-gray-800">{{ item_name }}</h2>
                    <div class="text-xs text-gray-400 mt-1">更新时间：{{ update_time }}</div>
                </div>
                <div class="w-20 h-20 border-2 border-gray-200 rounded-lg overflow-hidden flex items-center justify-center flex-shrink-0">
                    {% if item_image_base64 %}
                    <img src="data:image/png;base64,{{ item_image_base64 }}" alt="{{ item_name }}图标" class="w-full h-full object-cover">
                    {% else %}
                    <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" alt="默认图标" class="w-full h-full object-cover">
                    {% endif %}
                </div>
            </div>
            <div class="grid grid-cols-3 gap-4 text-center">
                <div>
                    <div class="text-gray-600">卖单</div>
                    <div class="text-xl font-mono font-semibold text-red-600">{{ min_sell|replace(',', ',') }}</div>
                </div>
                <div>
                    <div class="text-gray-600">买单</div>
                    <div class="text-xl font-mono font-semibold text-green-600">{{ max_buy|replace(',', ',') }}</div>
                </div>
                <div>
                    <div class="text-gray-600">中位</div>
                    <div class="text-xl font-mono font-semibold text-blue-600">{{ mid_price|replace(',', ',') }}</div>
                </div>
            </div>
        </div>

        <!-- 卖单列表 -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-gray-700">卖单</span>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full text-sm">
                    <thead>
                        <tr class="bg-gray-50">
                            <th class="px-4 py-2 text-left font-semibold text-gray-600">价格</th>
                            <th class="px-4 py-2 text-left font-semibold text-gray-600">剩余数量</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in sell_orders %}
                        <tr class="hover:bg-red-50">
                            <td class="px-4 py-2 font-mono text-red-600 font-bold">{{ order[1].price|int|format_number }}</td>
                            <td class="px-4 py-2 text-gray-500">{{ order[1].volume_remain }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 买单列表 -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-gray-700">买单</span>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full text-sm">
                    <thead>
                        <tr class="bg-gray-50">
                            <th class="px-4 py-2 text-left font-semibold text-gray-600">价格</th>
                            <th class="px-4 py-2 text-left font-semibold text-gray-600">剩余数量</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in buy_orders %}
                        <tr class="hover:bg-green-50">
                            <td class="px-4 py-2 font-mono text-green-600 font-bold">{{ order[1].price|int|format_number }}</td>
                            <td class="px-4 py-2 text-gray-500">{{ order[1].volume_remain }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 平均价格走势图 -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <div class="h-64">
                <canvas id="priceChart"></canvas>
            </div>
        </div>
    </div>

    <!-- 移动到最外层的页脚 -->
    <div class="text-center text-gray-500 text-sm mt-4">
        <p>{{ footer_text|default('紫竹梅实验型工业核心mk.1 - 估价 - kahunaBot') }}</p>
    </div>

    <script>
        // 格式化数字函数
        function formatNumber(num) {
            return new Intl.NumberFormat('zh-CN').format(num);
        }
        
        // 应用格式化到价格显示
        document.querySelectorAll('.font-mono').forEach(el => {
            const value = el.textContent.trim();
            if (!isNaN(parseFloat(value.replace(/,/g, '')))) {
                el.textContent = formatNumber(parseFloat(value.replace(/,/g, '')));
            }
        });
        
        // 获取价格历史数据
        const priceHistory = {{ price_history|tojson }};
        
        // 准备数据
        const dates = priceHistory.map(item => new Date(item[0]));
        const prices = priceHistory.map(item => item[1]);

        // 创建图表
        const ctx = document.getElementById('priceChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: '平均价格',
                    data: prices,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1,
                    fill: false,
                    pointRadius: 0 // 隐藏数据点
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                },
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'day',
                            displayFormats: {
                                day: 'MM-dd'
                            }
                        },
                        title: {
                            display: true,
                            text: '日期'
                        },
                        ticks: {
                            maxTicksLimit: 10 // 限制 X 轴标签数量
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'ISK'
                        },
                        ticks: {
                            callback: function(value) {
                                if (value >= 1000000000) {
                                    return (value / 1000000000).toFixed(1) + 'B';
                                }
                                if (value >= 1000000) {
                                    return (value / 1000000).toFixed(1) + 'M';
                                }
                                if (value >= 1000) {
                                    return (value / 1000).toFixed(1) + 'K';
                                }
                                return value;
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function(context) {
                                const date = new Date(context[0].label);
                                return date.toLocaleDateString('zh-CN');
                            },
                            label: function(context) {
                                let value = context.parsed.y;
                                if (value >= 1000000000) {
                                    return (value / 1000000000).toFixed(2) + ' B ISK';
                                }
                                if (value >= 1000000) {
                                    return (value / 1000000).toFixed(2) + ' M ISK';
                                }
                                if (value >= 1000) {
                                    return (value / 1000).toFixed(2) + ' K ISK';
                                }
                                return value + ' ISK';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>